{% if
    isForAdminEditView is defined or
    integration is defined and integration.configuration is defined and integration.configuration.0 is defined and integration.configuration.0.code is defined
%}
    {% if isForAdminEditView is defined %}
        {% set code = '{'~('lemisoft_sylius_seo_integration_plugin.form.configuration.code'|trans)~'}' %}
    {% else %}
        {% set code = integration.configuration.0.code %}
    {% endif%}
    <meta name="facebook-domain-verification" content="{{ code }}" />
{% endif %}

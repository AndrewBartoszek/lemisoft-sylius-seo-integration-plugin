<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="true"/>

        <service id="lemisoft_boilerplate.context.ui.shop.welcome"
                 class="Lemisoft\Tests\BoilerplatePlugin\Behat\Context\Ui\Shop\WelcomeContext">
            <argument type="service" id="lemisoft_boilerplate.page.shop.static_welcome"/>
            <argument type="service" id="lemisoft_boilerplate.page.shop.dynamic_welcome"/>
        </service>

        <service id="lemisoft_boilerplate.page.shop.static_welcome"
                 class="Lemisoft\Tests\BoilerplatePlugin\Behat\Page\Shop\StaticWelcomePage"
                 parent="sylius.behat.symfony_page"
                 public="false"/>

        <service id="lemisoft_boilerplate.page.shop.dynamic_welcome"
                 class="Lemisoft\Tests\BoilerplatePlugin\Behat\Page\Shop\DynamicWelcomePage"
                 parent="sylius.behat.symfony_page"
                 public="false"/>
    </services>
</container>
